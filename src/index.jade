doctype html
html(lang='ja', manifest="manifest.appcache")
  head
    meta(charset='UTF-8')
    title altjsdo.it
    meta(name='Description', content='altjsdo.it - edit JavaScript, HTML and CSS - ')
    meta(name='Keywords', content='JavaScript,CoffeeScript,HTML5,CSS,altjs,less,stylus,jade')
    meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1, maximum-scale=1')
    link(rel="apple-touch-icon" href="./icon-128.png")
    link(rel='stylesheet', href='./thirdparty/codemirror/codemirror.css')
    link(rel='stylesheet', href='./thirdparty/codemirror/theme/solarized.css')
    link(rel='stylesheet', href='./thirdparty/codemirror/addon/dialog/dialog.css')
    link(rel='stylesheet', href='./thirdparty/pure/pure-min.css')
    link(rel='stylesheet', href='./thirdparty/pure/main.css')
    link(rel='stylesheet', href='./thirdparty/pure/baby-blue.css')
    link(rel='stylesheet', href='index.css')
  body
    div#layout
      a#menuLink.menu-link
        span
      div#menu
        div.pure-menu.pure-menu-open
          a#menu-head.pure-menu-heading altjsdo.it
          ul
            li: a#menu-altjs(data-open='box-altjs') Script
            li: a#menu-althtml(data-open='box-althtml') Markup
            li: a#menu-altcss(data-open='box-altcss') Style
            li: a#menu-sandbox(data-open='box-sandbox') Run
      div#main
        div.content
          form#setting-config.pure-form.pure-form-stacked
            fieldset
              legend Project
              label
                | Title:
                input(data-config='title', type='text', value='', placeholder='no title')
              p
                | Save as URL:
                input#setting-project-url(type='url', value='', placeholder='Press Save Button', onclick="this.select();")
                span#setting-project-size
                input#setting-project-save.pure-button.pure-button-primary(type='button', value='Save')
                | &nbsp;
                span#setting-project-twitter
              p
                a.pure-button(target='_blank' href="#") New Project
            fieldset
              legend Compiler
              label
                | altJS:
                select(data-config='altjs')
                  option(value='JavaScript', selected='selected') JavaScript
                  option(value='CoffeeScript') CoffeeScript(1.7.1)
                  //option(value='TypeScript') TypeScript(1.0.0)
                  //option(value='LispyScript') LispyScript(0.3.6)
              label
                | altHTML:
                select(data-config='althtml')
                  option(value='HTML', selected='selected') HTML
                  option(value='Jade') Jade(1.3.1)
              label
                | altCSS:
                select(data-config='altcss')
                  option(value='CSS', selected='selected') CSS
                  option(value='LESS') LESS(1.7.0)
                  option(value='Stylus') Stylus(0.46.3)
            fieldset
              legend Configuration
              label
                | enable CodeMirror:
                input(data-config='enableCodeMirror', type='checkbox', checked='checked')
              label
                | view compiled code:
                input(data-config='enableViewSource', type='checkbox')
            fieldset
              legend Libraries
              label
                | Firebug-Lite(1.4.0):
                input(data-config='enableFirebugLite', type='checkbox')
              label
                | Zepto(1.1.3):
                input(data-config='enableJQuery', type='checkbox')
              label
                | jQuery(2.1.1):
                input(data-config='enableJQuery', type='checkbox')
              label
                | Underscore.js(1.6.0):
                input(data-config='enableUnderscore', type='checkbox')
              label
                | Processing.js(1.4.8):
                input(data-config='enableProcessing', type='checkbox')
              label
                | mathjs(0.23.0):
                input(data-config='enableMathjs', type='checkbox')
            fieldset
              legend Debug
              label
                | use cache:
                input(data-config='enableCache', type='checkbox', checked='checked')
              label
                | use blobCache
                input(data-config='enableBlobCache', type='checkbox')
            fieldset
              legend Support
              ul
                li: a(target='_blank' href="https://github.com/altjsdoit/altjsdoit") github
                li: a(target='_blank' href="https://twitter.com/search?q=%23altjsdoit") twitter
                li: a(target='_blank' href="./test.html") test
        #box-altjs
          textarea#box-altjs-textarea(wrap='off', placeholder='script')!="\n\n\n"
        #box-althtml
          textarea#box-althtml-textarea(wrap='off', placeholder='markup')!="\n\n\n"
        #box-altcss
          textarea#box-altcss-textarea(wrap='off', placeholder='style')!="\n\n\n"
        #box-sandbox
          iframe#box-sandbox-iframe
    script(src='./cache.js')
    script(src='./thirdparty/zepto/zepto.min.js')
    script(src='./ui.js')
    script(src='./thirdparty/underscore.js/underscore-min.js')
    script(src='./thirdparty/backbone.js/backbone-min.js')
    script(src='./thirdparty/jszip/jszip.min.js')
    script(src='./thirdparty/codemirror/codemirror.min.js')
    script(src='./thirdparty/codemirror/addon/search/searchcursor.js')
    script(src='./thirdparty/codemirror/addon/search/search.js')
    script(src='./thirdparty/codemirror/addon/dialog/dialog.js')
    script(src='./thirdparty/codemirror/addon/edit/matchbrackets.js')
    script(src='./thirdparty/codemirror/addon/edit/closebrackets.js')
    script(src='./thirdparty/codemirror/mode/javascript/javascript.js')
    script(src='./thirdparty/codemirror/mode/coffeescript/coffeescript.js')
    script(src='./thirdparty/codemirror/mode/css/css.js')
    script(src='./thirdparty/codemirror/mode/xml/xml.js')
    script(src='./thirdparty/codemirror/mode/jade/jade.js')
    script(async='async', src='./thirdparty/coffee-script/coffee-script.min.js')
    script(async='async', src='./thirdparty/jade/jade.min.js')
    script(async='async', src='./thirdparty/less.js/less.min.js')
    script(async='async', src='./thirdparty/stylus/stylus.min.js')
    script(async='async', src='./thirdparty/twitter/widgets.js')
    script(src='./lib.js')
    script(src='./index.js')
