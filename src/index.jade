doctype html
html(lang='ja')
  head
    meta(charset='UTF-8')
    title altjsdo.it
    meta(name='Description' content='altjsdoit - A Simple WebApp Editor - ')
    meta(name='Keywords' content='JavaScript,CoffeeScript,HTML5,CSS,altjs,less,stylus,jade')
    meta(name='viewport' content='width=device-width user-scalable=no,initial-scale=1,maximum-scale=1')
    link(rel="apple-touch-icon" href="./icon-128.png")
    link(rel='stylesheet' href='./thirdparty/codemirror/codemirror.css')
    link(rel='stylesheet' href='./thirdparty/codemirror/theme/solarized.css')
    link(rel='stylesheet' href='./thirdparty/codemirror/addon/dialog/dialog.css')
    link(rel='stylesheet' href='./thirdparty/pure/pure-min.css')
    link(rel='stylesheet' href='index.css')
  body
    header#menu
      div.home-menu.pure-menu.pure-menu-open.pure-menu-horizontal.pure-menu-fixed
        a.pure-menu-heading altjsdoit
        ul#menu-page-tab
          li.selected(data-target="#box-config") Config
          li(data-target="#box-editor") Editor
          li(data-target="#box-sandbox") Run
    div#main
      section#box-config.active
        form
          fieldset
            legend Project
            p
              label
                | Title:
                input(data-config='title' type='text' value='' placeholder='no title')
            p
              label
                | Commit as URL:
                input#config-project-url(type='url' value='' placeholder='Press Save Button' onclick="this.select();")
                input#config-project-save(type='button' value='Save')
                | &nbsp;
                span#config-project-twitter
            p
              a(target='_blank' href="#") New Project
            p
              label
                | CodeMirror:
                input#config-editor-codemirror(type='checkbox' checked="checked")
          fieldset
            legend Compiler
            p
              label
                | altJS:
                select(data-config='altjs')
                  option(value='JavaScript' selected='selected') JavaScript
                  option(value='CoffeeScript') CoffeeScript(1.7.1)
            p
              label
                | altHTML:
                select(data-config='althtml')
                  option(value='HTML' selected='selected') HTML
                  option(value='Jade') Jade(1.3.1)
            p
              label
                | altCSS:
                select(data-config='altcss')
                  option(value='CSS' selected='selected') CSS
                  option(value='LESS') LESS(1.7.0)
                  option(value='Stylus') Stylus(0.46.3)
          fieldset
            legend Libraries
            ul
              li
                label
                  | Firebug-Lite(1.4.0):
                  input(data-config='enableFirebugLite' type='checkbox')
              li
                label
                  | Zepto(1.1.3):
                  input(data-config='enableZepto' type='checkbox')
              li
                label
                  | jQuery(2.1.1):
                  input(data-config='enableJQuery' type='checkbox')
              li
                label
                  | Underscore.js(1.6.0):
                  input(data-config='enableUnderscore' type='checkbox')
              li
                label
                  | Backbone.js(1.1.2):
                  input(data-config='enableBackbone' type='checkbox')
              li
                label
                  | es6-shim(0.11.0):
                  input(data-config='enableES6shim' type='checkbox')
              li
                label
                  | Processing.js(1.4.8):
                  input(data-config='enableProcessing' type='checkbox')
              li
                label
                  | mathjs(0.23.0):
                  input(data-config='enableMathjs' type='checkbox')
          fieldset
            legend Debug
            ul
              li
                label
                  | use cache:
                  input(data-config='enableCache' type='checkbox' checked='checked')
              li
                label
                  | use blobCache:
                  input(data-config='enableBlobCache' type='checkbox')
              li
                label
                  | iframe type:
              li
                  select(data-config='iframeType')
                    option(value='blob' selected='selected') objectURL
                    option(value='srcdoc') srcdoc
                    option(value='base64') dataURI
            p
              a(target='_blank' href="./test.html") Self Test
          fieldset
            legend About
            pre
              | @@name @@version
              | @@timestamp
            p
              a(target='_blank' href="https://github.com/altjsdoit/altjsdoit") Github
              a(target='_blank' href="https://twitter.com/search?q=%23altjsdoit") Twitter
      section#box-editor
        div.home-menu.pure-menu.pure-menu-open.pure-menu-horizontal.pure-menu-fixed
          ul#box-editor-tab
            li.selected(data-tab="script") Script
            li(data-tab="markup") Markup
            li(data-tab="style") Style
            li(data-tab="compiled") Compiled
        div#box-editor-content
          textarea#box-editor-textarea(wrap='off')
      section#box-sandbox
        iframe#box-sandbox-iframe
    script(src='./thirdparty/zepto/zepto.min.js')
    script(src='./thirdparty/underscore.js/underscore-min.js')
    script(src='./thirdparty/backbone.js/backbone-min.js')
    script(src='./thirdparty/jszip/jszip.min.js')
    script(src="./thirdparty/codemirror/codemirror.min.js")
    script(src='./thirdparty/codemirror/options.min.js')
    script(src='./lib.js')
    script(src='./index.js')
    script(async='async' src='./thirdparty/coffee-script/coffee-script.min.js')
    script(async='async' src='./thirdparty/jade/jade.min.js')
    script(async='async' src='./thirdparty/less.js/less.min.js')
    script(async='async' src='./thirdparty/stylus/stylus.min.js')
    script(async='async' src='./thirdparty/twitter/widgets.js')
